@model IEnumerable<NW.Income.UIServices.Controllers.Questionaire>

@{
    ViewBag.Title = "DynamicContent";
}

<h2>DynamicContent</h2>

<p>
    @*  @Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <table>
                    <tr>
                        <td width="100px">
                            @Html.DisplayFor(modelItem => item.Question)
                        </td>
                        
                        <td>
                            <table>
                                @foreach (var ans in item.Answer)
                                {
                                    <tr>
                                        <td>@Html.CheckBox(@Html.DisplayFor(modelItem => ans).ToString())</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => ans).ToString()
                                        </td>

                                    </tr>

                                }
                            </table>
                        </td>

                    </tr>

                </table>
            </td>
        </tr>
    }

</table>
